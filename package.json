{
  "name": "syncmate",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier . --write ",
    "format:check": "npx prettier --check .",
    "db:generate": "cd packages/database && npx prisma generate",
    "backend": "cd apps/backend && npm run start",
    "build:backend": "tsc -p apps/backend && tsc -p packages/trpc --noEmit false || true && tsc -p packages/database",
    "build:creator": "turbo run build --filter=creator",
    "build:editor": "turbo run build --filter=editor",
    "build:web": "turbo run build --filter=web"
  },
  "devDependencies": {
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17",
    "react-icons": "^5.5.0",
    "@heroui/react": "^2.7.6",
    "zod": "^3.25.32"
  }
}
