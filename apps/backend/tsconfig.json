{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",

    "module": "esnext",

    "allowJs": false,
    "rootDir": "./src",
    "checkJs": false,
    "moduleResolution": "bundler",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist" /* Specify an output folder for all emitted files. */
  },
  "exclude": ["dist"],

  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}
