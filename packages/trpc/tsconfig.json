{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "skipLibCheck": true, // <- skips checking imported .d.ts files
    "noEmitOnError": false, // <- allows emitting even on error
    "paths": {
      "@repo/lib/*": ["../lib/src/*"]
    }
  },
  "include": ["../../"],
  "exclude": ["dist", "build", "node_modules"]
}
